<div x-data="juniorUstadhManagement()" class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-2xl font-bold text-gray-900">জুনিয়র উস্তাদ ব্যবস্থাপনা</h2>
            <p class="text-sm text-gray-600 mt-1">সহকারী শিক্ষক অ্যাকাউন্ট পরিচালনা করুন</p>
        </div>
        <button @click="showAddModal = true" class="btn-primary">
            <i class="fas fa-user-plus mr-2"></i>
            নতুন জুনিয়র উস্তাদ যোগ করুন
        </button>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card bg-gradient-to-br from-green-50 to-green-100 border-l-4 border-green-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-green-700">মোট জুনিয়র উস্তাদ</p>
                    <p class="text-3xl font-bold text-green-900 mt-2" x-text="juniorUstadhs.length"></p>
                </div>
                <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center">
                    <i class="fas fa-users text-white text-2xl"></i>
                </div>
            </div>
        </div>

        <div class="card bg-gradient-to-br from-blue-50 to-blue-100 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-blue-700">অ্যাক্টিভ অ্যাকাউন্ট</p>
                    <p class="text-3xl font-bold text-blue-900 mt-2" x-text="juniorUstadhs.length"></p>
                </div>
                <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center">
                    <i class="fas fa-user-check text-white text-2xl"></i>
                </div>
            </div>
        </div>

        <div class="card bg-gradient-to-br from-purple-50 to-purple-100 border-l-4 border-purple-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-purple-700">অনুমতি</p>
                    <p class="text-sm font-medium text-purple-900 mt-2">উপস্থিতি + রিসোর্স</p>
                </div>
                <div class="w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center">
                    <i class="fas fa-shield-alt text-white text-2xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Junior Ustadh List -->
    <div class="card">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-bold text-gray-900">জুনিয়র উস্তাদ তালিকা</h3>
            <div class="flex items-center space-x-4">
                <input 
                    type="text" 
                    x-model="searchQuery" 
                    placeholder="নাম বা ফোন খুঁজুন..." 
                    class="form-input w-64"
                >
            </div>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">নাম</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ফোন</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ইমেইল</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">যোগের তারিখ</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">অনুমতি</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">পদক্ষেপ</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <template x-for="ju in filteredJuniorUstadhs" :key="ju.id">
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-3">
                                        <i class="fas fa-user text-green-600"></i>
                                    </div>
                                    <div>
                                        <div class="text-sm font-medium text-gray-900" x-text="ju.name"></div>
                                        <div class="text-xs text-gray-500">জুনিয়র উস্তাদ</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900" x-text="ju.phone"></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600" x-text="ju.email || '-'"></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600" x-text="formatDate(ju.created_at)"></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex flex-col space-y-1">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                                        <i class="fas fa-check mr-1"></i>উপস্থিতি
                                    </span>
                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                                        <i class="fas fa-eye mr-1"></i>রিসোর্স (দেখা)
                                    </span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                                <button @click="editJuniorUstadh(ju)" class="text-blue-600 hover:text-blue-900 mr-3" title="সম্পাদনা">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button @click="deleteJuniorUstadh(ju.id, ju.name)" class="text-red-600 hover:text-red-900" title="মুছুন">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </template>
                    <tr x-show="filteredJuniorUstadhs.length === 0">
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                            <i class="fas fa-users text-4xl mb-2"></i>
                            <p>কোনো জুনিয়র উস্তাদ পাওয়া যায়নি</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add/Edit Modal -->
    <div x-show="showAddModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" @click.self="showAddModal = false">
        <div class="bg-white rounded-lg p-6 max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
            <h3 class="text-xl font-bold text-gray-900 mb-4" x-text="editingJuniorUstadh ? 'জুনিয়র উস্তাদ সম্পাদনা' : 'নতুন জুনিয়র উস্তাদ যোগ করুন'"></h3>
            
            <form @submit.prevent="saveJuniorUstadh()" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">নাম *</label>
                    <input type="text" x-model="form.name" required class="form-input" placeholder="উস্তাদের নাম লিখুন">
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">ফোন নম্বর *</label>
                        <input type="text" x-model="form.phone" required class="form-input" placeholder="01XXXXXXXXX" pattern="[0-9]{11}">
                        <p class="text-xs text-gray-500 mt-1">১১ সংখ্যার মোবাইল নম্বর</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">ইমেইল</label>
                        <input type="email" x-model="form.email" class="form-input" placeholder="example@mail.com">
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        পাসওয়ার্ড <span x-show="!editingJuniorUstadh" class="text-red-500">*</span>
                        <span x-show="editingJuniorUstadh" class="text-gray-500">(পরিবর্তন করতে চাইলে লিখুন)</span>
                    </label>
                    <input 
                        type="password" 
                        x-model="form.password" 
                        :required="!editingJuniorUstadh" 
                        class="form-input" 
                        placeholder="পাসওয়ার্ড লিখুন"
                    >
                    <p class="text-xs text-gray-500 mt-1">কমপক্ষে ৬ অক্ষর</p>
                </div>

                <!-- Permissions Info -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <h4 class="text-sm font-semibold text-blue-900 mb-2">
                        <i class="fas fa-info-circle mr-1"></i>
                        জুনিয়র উস্তাদের অনুমতি
                    </h4>
                    <ul class="text-sm text-blue-800 space-y-1">
                        <li><i class="fas fa-check text-green-600 mr-2"></i>শিক্ষার্থীদের উপস্থিতি নিতে পারবে</li>
                        <li><i class="fas fa-check text-green-600 mr-2"></i>অনলাইন রিসোর্স দেখতে পারবে (শুধুমাত্র দেখা)</li>
                        <li><i class="fas fa-times text-red-600 mr-2"></i>পরীক্ষা তৈরি/সম্পাদনা করতে পারবে না</li>
                        <li><i class="fas fa-times text-red-600 mr-2"></i>ফি ব্যবস্থাপনা করতে পারবে না</li>
                        <li><i class="fas fa-times text-red-600 mr-2"></i>ছাত্র যোগ/মুছতে পারবে না</li>
                    </ul>
                </div>
                
                <div class="flex justify-end space-x-3 pt-4">
                    <button type="button" @click="showAddModal = false; resetForm();" class="btn-secondary">বাতিল</button>
                    <button type="submit" class="btn-primary">সংরক্ষণ করুন</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function juniorUstadhManagement() {
    return {
        juniorUstadhs: [],
        searchQuery: '',
        showAddModal: false,
        editingJuniorUstadh: null,
        form: {
            name: '',
            phone: '',
            email: '',
            password: ''
        },
        
        init() {
            this.loadJuniorUstadhs();
        },
        
        get filteredJuniorUstadhs() {
            if (!this.searchQuery) return this.juniorUstadhs;
            
            const query = this.searchQuery.toLowerCase();
            return this.juniorUstadhs.filter(ju => 
                ju.name.toLowerCase().includes(query) || 
                ju.phone.includes(query) ||
                (ju.email && ju.email.toLowerCase().includes(query))
            );
        },
        
        async loadJuniorUstadhs() {
            try {
                const response = await fetch('/api/junior-ustadh/junior-ustadhs');
                const data = await response.json();
                if (data.success) {
                    this.juniorUstadhs = data.data.junior_ustadhs;
                }
            } catch (error) {
                console.error('Failed to load junior ustadhs:', error);
                showToast('জুনিয়র উস্তাদ লোড করতে ব্যর্থ', 'error');
            }
        },
        
        async saveJuniorUstadh() {
            // Validate phone number
            if (!/^[0-9]{11}$/.test(this.form.phone)) {
                showToast('ফোন নম্বর ১১ সংখ্যার হতে হবে', 'error');
                return;
            }
            
            // Validate password length
            if (!this.editingJuniorUstadh && this.form.password.length < 6) {
                showToast('পাসওয়ার্ড কমপক্ষে ৬ অক্ষর হতে হবে', 'error');
                return;
            }
            
            try {
                const url = this.editingJuniorUstadh 
                    ? `/api/junior-ustadh/junior-ustadhs/${this.editingJuniorUstadh.id}`
                    : '/api/junior-ustadh/junior-ustadhs';
                    
                const method = this.editingJuniorUstadh ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method: method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(this.form)
                });
                
                const data = await response.json();
                if (data.success) {
                    showToast(data.message, 'success');
                    this.showAddModal = false;
                    this.resetForm();
                    this.loadJuniorUstadhs();
                } else {
                    showToast(data.error, 'error');
                }
            } catch (error) {
                console.error('Failed to save junior ustadh:', error);
                showToast('সংরক্ষণ ব্যর্থ হয়েছে', 'error');
            }
        },
        
        editJuniorUstadh(ju) {
            this.editingJuniorUstadh = ju;
            this.form = {
                name: ju.name,
                phone: ju.phone,
                email: ju.email || '',
                password: ''
            };
            this.showAddModal = true;
        },
        
        async deleteJuniorUstadh(id, name) {
            if (!confirm(`${name} এর অ্যাকাউন্ট মুছে ফেলতে চান?`)) return;
            
            try {
                const response = await fetch(`/api/junior-ustadh/junior-ustadhs/${id}`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                if (data.success) {
                    showToast(data.message, 'success');
                    this.loadJuniorUstadhs();
                } else {
                    showToast(data.error, 'error');
                }
            } catch (error) {
                console.error('Failed to delete junior ustadh:', error);
                showToast('মুছে ফেলা ব্যর্থ হয়েছে', 'error');
            }
        },
        
        resetForm() {
            this.editingJuniorUstadh = null;
            this.form = {
                name: '',
                phone: '',
                email: '',
                password: ''
            };
        },
        
        formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return date.toLocaleDateString('bn-BD');
        }
    }
}
</script>
